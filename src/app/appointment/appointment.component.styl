.my-appointment
  background: #009688

h3 a
  color: black
  text-decoration: none

.appointment-table
  th, a
    padding: 10px
    text-align: center
    margin-bottom: 5px

  th:first-child
    padding-left: 0

  a
    text-decoration: none
    display: block
    color: white

  .taken-appointment
    background: #f2dede
    color: black

  .free-appointment
    background: #fcf8e3
    color: black

  .admin-appointment
    cursor: pointer

  .admin-appointment:hover
    background: #d9534f

.primary-card
  background: #009688
  color: white
  font-weight: 300
  font-size: 12px
  line-height: 16px

  a
    color: white
    font-weight: bold
    text-decoration: none

.appointment-username
  display: none

.appointment-taken
  display: inline-block

@media screen and (min-width: 1000px)
  .appointment-table
    th, a
      padding: 15px
      margin: 5px

  .appointment-username
    display: inline-block

  .appointment-taken
    display: none

@media screen and (max-width: 480px)
  .appointment-table th, .appointment-table a
    padding: 3px
