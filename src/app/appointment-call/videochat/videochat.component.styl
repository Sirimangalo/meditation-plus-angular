:host
  height: 100%

video
  display: block

.video
  position: relative
  background: #000
  width: 100%
  display: table

.loading
  display: table-cell
  vertical-align: middle

.loading-message
  color: #009687
  font-weight: bold
  font-size: 16px
  text-align: center

.video-local
  position: absolute
  height: 130px
  bottom: 20px
  right: 20px
  border-radius: 8px

.video-remote
  width: 100%
  max-height: 80vh
  margin: auto

.minimized
  max-height: 45vh

.invisible
  visibility: hidden
  height: 480px
  width: 1px
  position: relative
  left: 0
  top: 0

.hidden
  display: none

.btn-end
  background: red

.btn-togglechat
  position: absolute
  left: 10px
  display: none

.interface
  height: 100%

.interface-buttons
  position: absolute
  left: 0
  bottom: 5px
  width: 100%
  text-align: center

.interface-buttons button
  margin: 5px
  opacity: .4

.interface-buttons button:hover
  opacity: 1

/**
 * chat
 */

.messages
  width: 100%
  height: 80px
  overflow-y: scroll
  overflow-x: hidden
  padding-left: 10px
  font-size: 12px
  box-sizing: border-box;

.messages table
  width: 100%

.messages > p > span
  width: 100%
  display: flex

.message-meta
  font-size: 12px
  font-style: italic

.message-time
  font-size: 11px

.message-text
  width: 100%

.chat
  display: flex;
  flex-direction: column;

.chat-input
  padding: 10px

.center
  text-align: center
  padding-top: 70px

.error p
  color: red
  font-weight: bold

@media (max-width: 400px)
  .video-local
    height: 80px
    top: 10px
    right: 10px

@media (min-width: 400px) and (max-width: 475px)
  .video-local
    height: 90px
    top: 10px
    right: 10px

@media (min-width: 475px) and (max-width: 800px)
  .video-local
    height: 110px
    top: 15px
    right: 15px

@media (min-width: 500px)
  /**
   * Show button to make chat larger
   */
  .btn-togglechat
    display: block
